	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="de_DE">STUBE.BOXomega Skin</summary>
		<platform>all</platform>
		<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
		<forum></forum>
		<website></website>
		<email></email>
		<source>https://github.com/braz96/skin.mimic</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
</addons>
