<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.get.update" name="STUBE.BOX Updater" version="21.0.1" provider-name="Python">
    <requires>
        <import addon="xbmc.python" version="3.0.1"/>
    </requires>
    <extension point="xbmc.python.script" library="main.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">STUBE.BOX Update</summary>
        <description lang="de_DE"></description>
        <language></language>
        <platform>all</platform>
        <license>unlicense</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source></source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon
  id="skin.stubebox.omega"
  version="21.3.7a"
  name="STUBE.BOX.omega.SKIN"
  provider-name="Adrian - Skin-Mod for STUBE.BOX">
	<requires>
		<import addon="xbmc.gui" version="5.17.0"/>
	</requires>
	<extension
	  point="xbmc.gui.skin"
	  debugging="false"
	  effectslowdown="0.35">
